<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F8EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Progress indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">

            <View android:layout_width="40dp" android:layout_height="6dp" android:background="#C8E6C9" android:layout_marginEnd="6dp"/>
            <View android:layout_width="40dp" android:layout_height="6dp" android:background="#C8E6C9" android:layout_marginEnd="6dp"/>
            <View android:layout_width="40dp" android:layout_height="6dp" android:background="#2E7D32" android:layout_marginEnd="6dp"/>
            <View android:layout_width="40dp" android:layout_height="6dp" android:background="#C8E6C9" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permissions and Setup"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AgroPulse needs a few permissions to work properly"
            android:textColor="#556B2F"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Storage card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_margin="8dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_export"
                    android:tint="#2E7D32" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storage Access"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For backup and exporting data"
                        android:textColor="#666" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnStorageSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:backgroundTint="@android:color/white"
                    android:textColor="#2E7D32" />

                <Space android:layout_width="12dp" android:layout_height="1dp" />

                <Button
                    android:id="@+id/btnStorageAllow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notifications card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_margin="8dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bell"
                    android:tint="#2E7D32" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For reminders and alerts"
                        android:textColor="#666" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnNotifSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:backgroundTint="@android:color/white"
                    android:textColor="#2E7D32" />

                <Space android:layout_width="12dp" android:layout_height="1dp" />

                <Button
                    android:id="@+id/btnNotifAllow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow"
                    android:backgroundTint="#2E7D32"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btnSkipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip All"
            android:textColor="#2E7D32"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
